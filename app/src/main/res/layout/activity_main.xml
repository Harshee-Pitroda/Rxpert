<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e5f8e5">

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_top_vector" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:layout_marginTop="110dp"
        android:backgroundTint="#30803a"
        app:tabIndicatorColor="#ffff99"
        app:tabIndicatorHeight="3.5dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#ffff99"
        app:tabTextColor="#FFFFFF">


        <com.google.android.material.tabs.TabItem

            android:id="@+id/health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textStyle="bold"></com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem

            android:id="@+id/science"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food and Diet"
            android:textStyle="bold"></com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem

            android:id="@+id/technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise"
            android:textStyle="bold"></com.google.android.material.tabs.TabItem>

        <com.google.android.material.tabs.TabItem

            android:id="@+id/entertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVID 19"
            android:textStyle="bold"></com.google.android.material.tabs.TabItem>


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include"
        android:layout_marginTop="0dp"></androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/newsfeed"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="626dp"
        android:text="News Feed"
        android:textAlignment="center"
        android:textColor="#30803a"
        android:textSize="40sp"
        android:textStyle="bold"></TextView>


</RelativeLayout>